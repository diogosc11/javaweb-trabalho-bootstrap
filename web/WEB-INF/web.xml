<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>userdb</param-name>
        <param-value>diogo</param-value>
    </context-param>
    <context-param>
        <param-name>passworddb</param-name>
        <param-value>diogo</param-value>
    </context-param>
    <context-param>
        <param-name>database</param-name>
        <param-value>1</param-value>
    </context-param>
    <filter>
        <filter-name>filtro</filter-name>
        <filter-class>filtro</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>filtro</filter-name>
        <url-pattern>/erro.jsp</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>filtro</filter-name>
        <url-pattern>/lista.jsp</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>filtro</filter-name>
        <url-pattern>/menu.jsp</url-pattern>
    </filter-mapping>
    <listener>
        <description>ServletContextListener</description>
        <listener-class>Listener</listener-class>
    </listener>
    <servlet>
        <servlet-name>NewServlet3</servlet-name>
        <servlet-class>NewServlet3</servlet-class>
        <init-param>
            <param-name>userdb</param-name>
            <param-value>diogo</param-value>
        </init-param>
        <init-param>
            <param-name>passworddb</param-name>
            <param-value>diogo</param-value>
        </init-param>
        <init-param>
            <param-name>operacao</param-name>
            <param-value>login</param-value>
        </init-param>
        <init-param>
            <param-name>database</param-name>
            <param-value>1</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>NewServlet3</servlet-name>
        <url-pattern>/NewServlet3</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
